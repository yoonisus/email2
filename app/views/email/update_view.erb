<div class="container" style="width:600px; height:500px; top: 50%; left: 50%; margin: -250px 0px 0px -300px; position:absolute; background-color: #C9EEEA; ">
  <div style="display:table-cell; width:600px; height:500px; text-align:center; vertical-align: middle; ">
      <form class="form-horizontal" action="/siljae_update/<%=@one_post.id%>" method="POST">
      <h2>Edit your mail</h2><br>
      
      <div class="form-group">
        <label for="exampleInputEmail1" class="col-sm-2 control-label">Title</label>
        <div class="col-sm-10">
           <input name="title" type="text"  class="form-control" id="exampleInputEmail1" placeholder="Write a title" value="<%= @one_post.title %>"> 
        </div>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1" class="col-sm-2 control-label">Content</label>
        <div class="col-sm-10">
           <textarea name="content" type="text" class="form-control" rows="5" id="comment" placeholder="Write a message" ><%= @one_post.content %></textarea>   
        </div>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </form>
      
  </div>
</div>